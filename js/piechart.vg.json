{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Annual CO₂ Emissions by Continent (2022)",
  "width": "container",
  "height":300,
  "data": {
    "url": "data/co2_emissions_by_continents.csv", 
    "format": {"type": "csv"}
  },
  "mark": "arc",
  "encoding": {
    "theta": {
      "field": "Annual CO₂ emissions",
      "type": "quantitative",
      "title": "Annual CO₂ Emissions"
    },
    "color": {
      "field": "Continent", 
      "type": "nominal",
      "title": "Continent",
      "scale": {
        "domain": ["Africa", "Asia", "Europe", "North America", "Oceania", "South America"],
        "range": ["#1f77b4", "#ff7f0e", "#6a51a3", "#f7b2b1", "#7f7f7f", "#b2df8a"]
      }
    },
    "tooltip": [
      {"field": "Continent", "type": "nominal", "title": "Continent"},
      {"field": "Annual CO₂ emissions", "type": "quantitative", "title": "Emissions"}
    ]
  },
  "view": {
    "stroke": "transparent" 
  },
  "config": {
    "arc": {
      "cornerRadius": 5
    }
  }
}
