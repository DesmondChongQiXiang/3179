{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "CO2 Emissions by Sector Over Time (World)",
  "width": "container",
  "height":300,
  "data": {
    "url": "data/world_emissions_by_sector.csv",
    "format": {"type": "csv"}
  },
  "params": [
    {
      "name": "Sector_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Buildings",
          "Bunker Fuels",
          "Electricity & Heat",
          "Industry",
          "Land Use",
          "Other Fuels",
          "Transport",
          "Manufacturing",
          "Fugitive Emissions"
        ],
        "labels": [
          "Show All",
          "Buildings",
          "Bunker Fuels",
          "Electricity & Heat",
          "Industry",
          "Land Use",
          "Other Fuels",
          "Transport",
          "Manufacturing",
          "Fugitive Emissions"
        ],
        "name": "Sector Selection: "
      }
    }
  ],
  "transform": [
    {
      "filter": "Sector_selection == null || datum.Sector == Sector_selection"
    }
  ],
  "mark": "area",
  "encoding": {
    "x": {
      "field": "Year",
      "type": "temporal",
      "title": "Year"
    },
    "y": {
      "aggregate": "sum",
      "field": "Emissions",
      "type": "quantitative",
      "title": "CO2 Emissions",
      "axis": {
        "format": ".2s"
      }
    },
    "color": {
      "field": "Sector",
      "type": "nominal",
      "title": "Sector",
      "scale": {
        "domain": [
          "Buildings",
          "Bunker Fuels",
          "Electricity & Heat",
          "Fugitive Emissions",
          "Industry",
          "Land Use",
          "Manufacturing",
          "Other Fuels",
          "Transport"
        ],
        "range": [
        "#8dd3c7",
        "#ffffb3",
        "#bebada",
        "#a6d854",
        "#80b1d3",
        "#fdb462",
        "#b3b3b3",
        "#ffed6f",
        "#d9d9d9"
      ]
      }
    },
    "tooltip": [
      {"field": "Year", "type": "temporal"},
      {"field": "Sector", "type": "nominal"},
      {"field": "Emissions", "type": "quantitative"}
    ]
  },
  "config": {
    "mark": {
      "stroke": "black",
      "strokeWidth": 0.5
    }
  }
}
