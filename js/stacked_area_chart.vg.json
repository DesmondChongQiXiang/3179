{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Carbon Emissions Around the World (2022)",
  "data": {
    "url": "data/combined_co2_continents_2022.csv",  
    "format": {"type": "csv"}
  },
  "mark": {
    "type": "circle",
    "tooltip": true
  },
  "encoding": {
    "size": {
      "field": "Annual CO₂ emissions",
      "type": "quantitative",
      "scale": {"range": [10, 1000]},
      "title": "Annual CO₂ Emissions"
    },
    "color": {
      "field": "region",
      "type": "nominal",
      "title": "Region",
      "scale": {
        "domain": ["Africa", "Americas", "Asia", "Europe", "Oceania"],
        "range": ["#1f77b4", "#ff7f0e", "#2ca02c", "#d62728", "#9467bd"] 
      }
    },
    "x": {
      "field": "Annual CO₂ emissions", 
      "type": "quantitative"
    },
    "y": {
      "field": "Entity",
      "type": "nominal"
    }
  },
  "config": {
    "mark": {
      "stroke": "black",
      "strokeWidth": 0.5
    }
  }
}
