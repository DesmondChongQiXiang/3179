{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "CO2 Emissions by Sector Over Time (World)",
  "data": {
    "url": "data/world_emissions_by_sector.csv",
    "format": {"type": "csv"}
  },
  "mark": "area",
  "encoding": {
    "x": {
      "field": "Year",
      "type": "temporal",
      "title": "Year"
    },
    "y": {
      "aggregate": "sum", 
      "field": "Emissions",
      "type": "quantitative",
      "title": "CO2 Emissions"
    },
    "color": {
      "field": "Sector",
      "type": "nominal",
      "title": "Sector"
    },
    "tooltip": [
      {"field": "Year", "type": "temporal"},
      {"field": "Sector", "type": "nominal"},
      {"field": "Emissions", "type": "quantitative"}
    ]
  },
  "config": {
    "mark": {
      "stroke": "black",
      "strokeWidth": 0.5
    }
  }
}
