{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Global COâ‚‚ Emission (2021)",
  "width": "container",
  "height": 400,
  "layer": [
    {
      "data": {
        "url": "js/ne_110m.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    },
    {
      "data": {
        "url": "js/ne_10m_ocean.topojson",
        "format": {"type": "topojson", "feature": "ne_10m_ocean"}
      },
      "mark": {"type": "geoshape", "fill": "#23b3f547"}
    },
    {
      "projection": {"type": "equalEarth"},
      "data": {
        "url": "js/ne_110m.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.ISO_A3",
          "from": {
            "data": {
              "url": "data/co2_emissions_per_country_2021.csv"
            },
            "key": "ISO 3166-1 alpha-3",
            "fields": ["Per Capita"]
          }
        }
      ],
      "mark": {"type": "geoshape","stroke": "#7e7e7e", "strokeWidth": 0.5},
      "encoding": {
        "color": {
          "field": "Per Capita",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [0.5, 1, 2, 5, 10,15,20,30,35],
            "range": ["#fff7ec", "#fee8c8", "#fdd49e", "#fdbb84", "#fc8d59", "#ef6548","#d7301f","#b30000","#7f0000"]
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Per Capita", "type": "quantitative"}
        ]
      }
    }
  ]
}
